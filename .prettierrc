{
	"overrides": [
		{
			"files": "**/lwc/**/*.html",
			"options": {
				"parser": "lwc"
			}
		},
		{
			"files": "*.{cmp,page,component}",
			"options": {
				"parser": "html"
			}
		}
	],
	"plugins": ["prettier-plugin-apex", "@prettier/plugin-xml"],
	"printWidth": 120,
	"tabWidth": 4,
	"trailingComma": "none",
	"useTabs": true
}
